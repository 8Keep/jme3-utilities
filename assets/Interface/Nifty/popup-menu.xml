<!--
 Nifty XML to support a popup menu.
-->
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <!-- define styles and controls -->
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/Nifty/styles/bats.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <popup id="popup-menu"
           controller="jme3utilities.SimpleScreenController"
           backgroundColor="#0008"
           childLayout="absolute-inside">
        <control name="niftyMenu" id="#menu">
            <interact
                onClick="closeActivePopup()"
                onSecondaryClick="closeActivePopup()"
                onTertiaryClick="closeActivePopup()"/>
        </control>
    </popup>
</nifty>