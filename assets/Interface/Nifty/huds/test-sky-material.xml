<!--
 The heads-up display (HUD) for the TestSkyMaterial application.
-->
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <!-- define styles and controls -->
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/Nifty/styles/bats.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <screen id="test-sky-material"
            controller="jme3utilities.sky.test.TestSkyMaterialHud">
        <layer childLayout="horizontal">
            <panel/>
            <panel id="hud"
                   childLayout="vertical"
                   width="235">
                <control name="scrollPanel"
                         style="bats-scroll-panel"
                         horizontal="false">
                    <panel childLayout="vertical"
                           padding="10"
                           width="215">

                        <control name="label"
                                 text="The H key toggles this display."/>
                        <panel style="statusPanel">
                            <control name="label"
                                     text="moon transmission ="/>
                            <control name="label"
                                     id="moonTransmissionStatus"
                                     textHAlign="right"/>
                        </panel>
                        <panel style="statusPanel">
                            <control name="label"
                                     text="sun transmission ="/>
                            <control name="label"
                                     id="sunTransmissionStatus"
                                     textHAlign="right"/>
                        </panel>
                        <panel style="buttonPanel"
                               height="60">
                            <control name="button"
                                     id="idToAvoidNiftyWarning"
                                     label="Select view">
                                <interact onRelease="perform(view)"/>
                            </control>
                        </panel>

                        <control name="label"
                                 text="Cloud layer 0 offset and scale:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="c0USlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c0VSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c0ScaleSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="-1"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   width="34">
                                <control name="label" id="c0USliderStatus"/>
                                <control name="label" id="c0VSliderStatus"/>
                                <control name="label" id="c0ScaleSliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Cloud layer 1 offset and scale:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="c1USlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c1VSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c1ScaleSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     max="1"
                                     min="-1"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   width="34">
                                <control name="label" id="c1USliderStatus"/>
                                <control name="label" id="c1VSliderStatus"/>
                                <control name="label" id="c1ScaleSliderStatus"/>
                            </panel>
                        </panel>

                        <panel style="statusPanel">
                            <control name="label"
                                     id="phaseStatus"/>
                        </panel>
                        <panel style="buttonPanel"
                               height="60">
                            <control name="button"
                                     id="id2ToAvoidNiftyWarning"
                                     label="Select lunar phase">
                                <interact onRelease="perform(phase)"/>
                            </control>
                        </panel>
                        <control name="label"
                                 text="Moon offset, scale, and rotation:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="mUSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="mVSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="mScaSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="-1.7"
                                     max="-0.5"
                                     min="-2.5"
                                     stepSize="0.1"/>
                            <control name="verticalSlider" id="mRotSlider"
                                     buttonStepSize="90"
                                     height="160"
                                     initial="0"
                                     max="180"
                                     min="-180"
                                     stepSize="1"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="mUSliderStatus"/>
                                <control name="label" id="mVSliderStatus"/>
                                <control name="label" id="mScaSliderStatus"/>
                                <control name="label" id="mRotSliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Sun offset and scale:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="sunUSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="sunVSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="sunScaleSlider"
                                     buttonStepSize="0.5"
                                     height="160"
                                     initial="-1.1"
                                     max="0"
                                     min="-2"
                                     stepSize="0.1"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="sunUSliderStatus"/>
                                <control name="label" id="sunVSliderStatus"/>
                                <control name="label" id="sunScaleSliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Background color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="bgRSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="bgGSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="bgBSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0.5"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="bgASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="bgRSliderStatus"/>
                                <control name="label" id="bgGSliderStatus"/>
                                <control name="label" id="bgBSliderStatus"/>
                                <control name="label" id="bgASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Clear color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="clearRSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0.4"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="clearGSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0.6"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="clearBSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="clearASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="clearRSliderStatus"/>
                                <control name="label" id="clearGSliderStatus"/>
                                <control name="label" id="clearBSliderStatus"/>
                                <control name="label" id="clearASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Cloud layer 0 color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="c0RSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c0GSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c0BSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c0ASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="c0RSliderStatus"/>
                                <control name="label" id="c0GSliderStatus"/>
                                <control name="label" id="c0BSliderStatus"/>
                                <control name="label" id="c0ASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Cloud layer 1 color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="c1RSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c1GSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c1BSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="c1ASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="c1RSliderStatus"/>
                                <control name="label" id="c1GSliderStatus"/>
                                <control name="label" id="c1BSliderStatus"/>
                                <control name="label" id="c1ASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Haze color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="hazeRSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="hazeGSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="hazeBSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="hazeASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="hazeRSliderStatus"/>
                                <control name="label" id="hazeGSliderStatus"/>
                                <control name="label" id="hazeBSliderStatus"/>
                                <control name="label" id="hazeASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Moon color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="moonRSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="moonGSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="moonBSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="moonASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="moonRSliderStatus"/>
                                <control name="label" id="moonGSliderStatus"/>
                                <control name="label" id="moonBSliderStatus"/>
                                <control name="label" id="moonASliderStatus"/>
                            </panel>
                        </panel>

                        <control name="label"
                                 text="Sun color:"/>
                        <panel childLayout="horizontal" padding="10">
                            <control name="verticalSlider" id="sunRSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="sunGSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="sunBSlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="1"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <control name="verticalSlider" id="sunASlider"
                                     buttonStepSize="1"
                                     height="160"
                                     initial="0"
                                     max="1"
                                     min="0"
                                     stepSize="0.01"/>
                            <panel childLayout="vertical"
                                   height="180"
                                   width="34">
                                <control name="label" id="sunRSliderStatus"/>
                                <control name="label" id="sunGSliderStatus"/>
                                <control name="label" id="sunBSliderStatus"/>
                                <control name="label" id="sunASliderStatus"/>
                            </panel>
                        </panel>

                    </panel>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>